<%= form_for @recipe do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %><br><br><br>

  <%= f.fields_for :ingredients do |ingredient| %>

  <legend><%= ingredient.object.ingredient_number %></legend><br>
    <%= ingredient.label :name %>
    <%= ingredient.text_field :name %><br><br>

    <%= ingredient.label :quantity %>
    <%= ingredient.text_field :quantity %><br><br>

    <%= ingredient.hidden_field :ingredient_number%>
  <% end %>

  <%= f.submit %>
<% end %>
