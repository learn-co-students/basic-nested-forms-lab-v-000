<%= form_for @recipe do |f| %>  <br>

  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ing| %>  <br>
    <%= ing.label :quantity %> <br>
    <%= ing.text_field :quantity %><br>

    <%= ing.label :name %>  <br>
    <%= ing.text_field :name %><br>


  <% end %>

<%= f.submit %>
<% end %>
