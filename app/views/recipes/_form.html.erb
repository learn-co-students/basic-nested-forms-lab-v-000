
<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br> 
  
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %>
    <br>
    
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <br>
  <% end %>
  
  <br>
  <%= f.submit %>
<% end %>
