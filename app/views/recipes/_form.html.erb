<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

   <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :recipe_ingredients_attributes_0_quantity %>
    <%= ing.text_field :recipe_ingredients_attributes_0_quantity %><br>

    <%= ing.label :recipe_ingredients_attributes_0_name %>
    <%= ing.text_field :recipe_ingredients_attributes_0_name %><br>

    <%= ing.label :recipe_ingredients_attributes_1_quantity %>
    <%= ing.text_field :recipe_ingredients_attributes_1_quantity %><br>

    <%= ing.label :recipe_ingredients_attributes_1_name %>
    <%= ing.text_field :recipe_ingredients_attributes_1_name %><br>
    <% end %>
    <%= f.submit %>
<% end %>
