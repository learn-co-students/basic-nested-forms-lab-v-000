<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |bam| %>
    <%= bam.label :name %>
    <%= bam.text_field :name %><br>
 
    <%= bam.label :quantity %>
    <%= bam.text_field :quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>