<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %> <br />
  <%= f.fields_for :ingredients do |ingr| %>
    <br /> Ingredient Name: <%= ingr.text_field :name %> <br />
    <br /> Ingredient Quantity: <%= ingr.text_field :quantity %> <br />
  <% end %>
  <br />
  <%= f.submit %>
<% end %>
