<%= form_for @recipe do |f| %>
  <p>Title: <%= f.text_field :title %></p>
  <p>Ingredients:</p>
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>
  <% end %>
  <%= f.submit %>
<% end %>
