<%= form_for @recipe do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <br><br>
  <%= f.label :ingredients, "Ingredients:" %>
  <br><br>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :quantity %>
    <%= i.text_field :quantity %>

    <br><br>

    <%= i.label :name %>
    <%= i.text_field :name%>
    <br><br>
  <% end %>





  <%= f.submit %>
<% end %>
