<%= form_for @recipe do |f| %>
  Title:
  <%= f.text_field :title %><br>

  <h4>Ingredients</h4>
  <%= f.fields_for :ingredients do |ingred| %>
    <%= ingred.label :name %>
    <%= ingred.text_field :name %><br>

    <%= ingred.label :quantity %>
    <%= ingred.text_field :quantity %><br>

  <% end %>

  <br></br>

  <%= f.submit %>
<% end %>
