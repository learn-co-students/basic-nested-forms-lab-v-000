<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <ul>
    <%= f.fields_for :ingredients do |ingredient| %>
    <li>
      <%= ingredient.text_field :name %>
      <%= ingredient.text_field :quantity %>
    </li>
    <% end %>
    <%= link_to 'add ingredient', @recipe %>
  </ul>

  <%= f.submit %>
  
<% end %>
