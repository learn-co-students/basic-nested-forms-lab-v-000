<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <br>
  Ingredients: 
  <br>
  <%= f.fields_for :ingredients do |ing| %>
  	<%= ing.label :name %>
  	<%= ing.text_field :name %><br>

  	<%= ing.label :quantity %>
  	<%= ing.text_field :quantity %><br>
 
  <% end %>
  <%= link_to 'add ingredient', @recipe %>
  <%= f.submit %>	
<% end %>
