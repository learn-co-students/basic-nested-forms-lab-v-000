<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.fields_for :ingredients do |i| %>
    Ingredient <%= i.index + 1 %><br><br>
    <%= i.label :quantity %><br>
    <%= i.text_field :quantity %><br>
    <%= i.label :name %><br>
    <%= i.text_field :name %><br><br>
  <% end %>
  <%= f.submit %>
<% end %>
