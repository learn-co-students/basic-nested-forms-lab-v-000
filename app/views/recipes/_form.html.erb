<%= form_for @recipe do |f| %>
  Title:
  <%= f.text_field :title %>
  <br></br>
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %>
    <%= ing.label :name %>
    <%= ing.text_field :name %><br></br>
    <% end %>
    <br></br>
    <%= f.submit %>
<% end %>
