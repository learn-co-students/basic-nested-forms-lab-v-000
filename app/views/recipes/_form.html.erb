<%= form_for (setup_recipe @recipe) do |f| %>
  Title: <%= f.text_field :title %><br>
  Ingredients: 
  <%= f.fields_for :ingredients do |i| %>
  <%= i.label :name %>
  <%= i.text_field :name %><br>

  <%= i.label :quantity %>
  <%= i.text_field :quantity %><br>
  <% end %>
  <%= f.submit %>

<%end%>
