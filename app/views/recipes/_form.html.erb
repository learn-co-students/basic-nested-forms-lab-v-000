<%= form_for @recipe do |f| %>
  Title:<br>
  <%= f.text_field :title %><br><br>
  Ingredients:<br>
  <%= f.fields_for :ingredients do |ingredient| %>
    Name: <%= ingredient.text_field :name %><br><br>
    Qty: <%= ingredient.text_field :quantity %>
  <% end %>
  <%= f.submit "commit" %>
<% end %>
