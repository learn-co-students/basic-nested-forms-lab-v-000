<%= form_for @recipe do |f| %>

  <p>Title: <%= f.text_field :title %></p>


  <% f.label :title %>
  <% f.text_field :title %>

  <%= f.fields_for :ingredients do |ingre| %>

    <%= ingre.label :quantity %>
    <%= ingre.text_field :quantity %><br>
    <%= ingre.label :name %>
    <%= ingre.text_field :name %><br>



  <% end %>

  <%= f.submit %>
<% end %>
