<%= form_for @recipe do |f| %>
  <p>Title: <%= f.text_field :title %></p>

  <%= f.fields_for :ingredients do |ingredient| %>
    <p><%= ingredient.label :name %>
    <%= ingredient.text_field :name %></p>
    <p><%= ingredient.label :quantity %>
    <%= ingredient.text_field :quantity %></p>
  <% end %>

  <%= f.submit %>
<% end %>
