<%= form_for @recipe do |f| %>
	<p>Title: <%= f.text_field :title %></p>

	<ul>
	    <%= f.fields_for :ingredients do |ingredient| %>
	   <li>
	    	Ingredient Name: <%= ingredient.text_field :name %>
	    	Ingredient quanity: <%= ingredient.text_field :quantity %>
	    </li>
	    <% end %>
	</ul>
  <%= f.submit %>

<% end %>
