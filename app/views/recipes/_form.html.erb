<h3>New Recipe:</h3>
<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br/>

  <p>Ingredients:</p>
  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name %>
    <%= ingr.text_field :name %><br/>

    <%= ingr.label :quantity %>
    <%= ingr.text_field :quantity %><br/>
  <% end %>
  <%= f.submit %>
<% end %>
