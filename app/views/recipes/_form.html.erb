<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <h4>Ingredients: </h4>
  <%= f.fields_for :ingredients do |addr| %>
    <%= addr.label :name %>
    <%= addr.text_field :name %><br>

    <%= addr.label :quantity %>
    <%= addr.text_field :quantity %><br>

  <% end %>

  <%= f.submit %>
<% end %>
