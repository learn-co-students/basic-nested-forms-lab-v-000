<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <br>
  <%= f.fields_for :ingredients do |ingrd| %>

    <%= ingrd.label :recipe_ingredients_quantity %>
    <%= ingrd.text_field :quantity %>
    <br>
    <%= ingrd.label :recipe_ingredients_name %>
    <%= ingrd.text_field :name %>
    <br>

    <% end %>

    <%= f.submit %>
  <%end%>
