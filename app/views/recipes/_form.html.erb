<%= form_for @recipe do |recipe_form| %>
  Title: <%= recipe_form.text_field :title %><br><br>

  <%= recipe_form.fields_for :ingredients do |ingredient| %>
  	<%= ingredient.label :name %><br>
  	<%= ingredient.text_field :name %><br>
  	<%= ingredient.label :quantity %><br>
  	<%= ingredient.text_field :quantity %><br>
	<%end%>

    <br><%= recipe_form.submit%>
  <% end %>
