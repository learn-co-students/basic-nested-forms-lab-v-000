<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br>
  <%= f.label :ingredients %>
  <%= f.fields_for :ingredients do |ing| %>
    <br>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %>
    <br>
  <% end %>
  <%= f.submit %>
<% end %>
