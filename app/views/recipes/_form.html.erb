<%= form_for @recipe do |f| %>
  <%= f.label :title %>:<br>
  <%= f.text_field :title %><br><br>
  <%= f.label :ingredients %>:<br>
  <%= f.fields_for :ingredients do |ingrd| %>
    <%= ingrd.label :name %>:
    <%= ingrd.text_field :name %>
    <%= ingrd.label :quantity %>:
    <%= ingrd.text_field :quantity %><br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
