<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ingreds| %>

    <%= ingreds.label :name %>
    <%= ingreds.text_field :name %><br>

    <%= ingreds.label :quantity %>
    <%= ingreds.text_field :quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>
