<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <br><br>

  <%= f.fields_for :ingredients do |ingred| %>
    <%= ingred.label :name %>
    <%= ingred.text_field :name %>
    <%= ingred.label :quantity %>
    <%= ingred.text_field :quantity %>
    <br><br>
  <% end %>

  <%= f.submit %>
<% end %>
