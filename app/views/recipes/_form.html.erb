<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name %>
    <%= ingr.text_field :name %><br>

    <%= ingr.label :quantity %>
    <%= ingr.text_field :quantity %><br>

    <%= ingr.label :ingredient_type %>
    <%= ingr.text_field :ingredient_type %><br>

  <% end %>

  <%= f.submit %>
<% end %>
