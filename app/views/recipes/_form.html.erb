<%= form_for @recipe do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <%= f.label :ingredients %><br></br>
  <%= f.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :name %>
    <%= ingredient.text_field :name %>

    <%= ingredient.label :quantity %>
    <%= ingredient.text_field :quantity %><br></br>
  <%end%><br>
  <%=f.submit%>
<% end %>
