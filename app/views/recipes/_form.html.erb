<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <%= f.fields_for :ingredients do |ingredients| %>
    <%= ingredients.label :name %>
    <%= ingredients.text_field :name %>

    <%= ingredients.label :quantity %>
    <%= ingredients.text_field :quantity %>
  <% end %>
  <%= f.submit %>
<% end %>
