<%= form_for @recipe do |f| %>

  <%= f.label :title %> <br>
  <%= f.text_field :title %><br><br>

	<p><b>Ingredients:</b></p>
  <%= f.fields_for :ingredients do |i| %>
  	<%= i.label :name %> <%= i.text_field :name %>
  	<%= i.label :quantity %> <%= i.text_field :quantity %><br><br>
  <% end %>
	<br>
  <%= f.submit %>
<% end %>
