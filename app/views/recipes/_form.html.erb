<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ingredient_f| %>
    <%= ingredient_f.label :name %><br>
    <%= ingredient_f.text_field :name %><br>

    <%= ingredient_f.label :quantity %><br>
    <%= ingredient_f.text_field :quantity %><br>
  <% end %>
  <%= f.submit %>
<% end %>
