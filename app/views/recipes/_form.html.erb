<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %> <br>
    Ingredients List: <%= f.fields_for :ingredients do |i| %> <br>
      <%= i.label :name %>
      <%= i.text_field :name %> <br>
      <%= i.label :quantity %>
      <%= i.text_field :quantity %> <br>
    <% end %>
  <%= f.submit %>
<% end %>
