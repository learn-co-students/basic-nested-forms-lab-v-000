<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br>
<br>
  Ingredients:<br>
  
  <%=f.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :name %><br>
    <%= ingredient.text_field :name %><br>
    <%= ingredient.label :quantity %><br>
    <%= ingredient.text_field :quantity %><br>
  <%end%>

  <%= f.submit %>
<% end %>
