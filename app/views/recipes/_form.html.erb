<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <%= f.fields_for :ingredients do |ingredient| %>
    <p><%= ingredient.label :name %></p>
    <p><%= ingredient.text_field :name %></p>
    <p><%= ingredient.label :quantity %></p>
    <p><%= ingredient.text_field :quantity %></p>
  <% end %>
  <%= f.submit "commit" %> 
<% end %>
