<%= form_for @recipe do |f| %>
  <h3>Title: <%= f.text_field :title %></h3>
  <h3>Ingredients:</h3>
  <%= f.fields_for :ingredients do |ing| %>
      <%= ing.label :name %>
      <%= ing.text_field :name %><br>
      <%= ing.label :quantity %>
      <%= ing.text_field :quantity %><br></br>
    <% end %>
    <br></br>
    <%= f.submit %>
<% end %>
