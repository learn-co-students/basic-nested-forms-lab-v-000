<h3>My Recipe</h3>

<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %> <br><br>
  <strong>Ingredients:</strong><br><br>

  <%= f.fields_for :ingredients do |i|%>
  <%=i.label :name%>
  <%=i.text_field :name%> <br>

  <%=i.label :quantity%>
  <%=i.text_field :quantity%> <br><br>

  <%end%>
  <%=f.submit%>


<% end %>
