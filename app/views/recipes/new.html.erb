


<%= form_for @recipe do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.fields_for :ingredients do |ing| %><br>
<%= ing.label :ingredient_id %>
<%= ing.label :name %>
<%= ing.text_field :name %><br>
<%= ing.label :quantity %>
<%= ing.text_field :quantity %><br>

<% end%>
<%= f.submit %>
<% end%>
