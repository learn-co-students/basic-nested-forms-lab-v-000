<%= form_for(@recipe) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br />

<fieldset>
  <legend> Ingredient Info</legend>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>
    <%= i.text_field :name %> <br />
    <%= i.label :quantity %>
    <%= i.text_field :quantity %> <br /><br />
  <% end %>
</fieldset>

  <%= f.submit %>
<% end %>
