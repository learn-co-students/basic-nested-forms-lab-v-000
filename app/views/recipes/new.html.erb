  <%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br>
  
  <%= f.fields_for :ingredients do |ingredient| %>
    Name: <%= ingredient.text_field :name %>
    Quantity: <%= ingredient.text_field :quantity %><br>
  <% end %>
  <% link_to 'add ingredient', @recipe %>
 
  <%= f.submit %>
<% end %>