<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |recip| %>
    <%= recip.label :name %>
    <%= recip.text_field :name %><br>

    <%= recip.label :quantity %>
    <%= recip.text_field :quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>
