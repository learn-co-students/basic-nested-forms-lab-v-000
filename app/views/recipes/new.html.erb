<%=form_for @recipe do |f| %>
<%=f.label :title %>
<%=f.text_field :title %><br>
<%=f.label :ingredients %><br>
<%=f.fields_for :ingredients do |ingd|%>
<%=ingd.label :name %>
<%=ingd.text_field :name %><br>

<%=ingd.label :quantity %>
<%=ingd.text_field :quantity %><br>
<% end %>
<%= f.submit %>
<% end %>
